<odoo>
    <!-- Minimal Tree View for sale.order without header bulk action buttons -->
    <record id="view_purchase_order_tree_no_bulk_actions" model="ir.ui.view">
        <field name="name">purchase.order.tree.no.bulk.actions</field>
        <field name="model">purchase.order</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Purchase Orders"
                  create="false"
                  edit="false">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_order"/>
                <field name="state"/>
                <field name="amount_total"/>
            </tree>
        </field>
    </record>
</odoo>
