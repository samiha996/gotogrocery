<odoo>
    <!-- Report Action -->
    <record id="action_sale_order_product_summary_report" model="ir.actions.report">
      <field name="name">Product Summary Report</field>
      <field name="model">sale.order</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">product_package_price.report_sale_order_product_summary</field>
      <field name="binding_model_id" ref="sale.model_sale_order"/>
      <field name="binding_view_types">tree</field>
      <field name="print_report_name">'Product Summary - %s' % (object.name)</field>
    </record>

    <!-- QWeb Template -->
    <template id="report_sale_order_product_summary" t-name="product_package_price.report_sale_order_product_summary">
      <t t-call="web.basic_layout">
        <h2>Summary Report</h2>
        <table class="table table-sm o_main_table">
          <thead>
            <tr>
              <th>Product/ الصنف</th>
              <th>Boxes/ الصناديق</th>
              <th>Pieces/ القطع</th>
              <th>Total/ الإجمالي</th>

            </tr>
          </thead>
          <tbody>
            <t t-foreach="docs" t-as="entry">
              <tr>
                <td><span t-field="entry['product'].name"/></td>
                <td><span t-esc="'%.2f' % entry['total_boxes']"/></td>
                <td><span t-esc="'%.2f' % entry['total_pieces']"/></td>
                <td><span t-esc="'%.2f' % entry['total_qty']"/></td>

              </tr>
            </t>
          </tbody>
        </table>
      </t>
    </template>



</odoo>
