<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_report_partner_ledger_view_inherit" model="ir.ui.view">
        <field name="name">Partner Ledger Inherit - Add Partner Filter</field>
        <field name="model">account.report.partner.ledger</field>
        <field name="inherit_id" ref="base_accounting_kit.account_report_partner_ledger_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='result_selection']" position="after">
                <field name="partner_id" placeholder="Select a partner to filter"/>
            </xpath>
        </field>
    </record>
</odoo>
